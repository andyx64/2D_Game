<Page x:Class="_2dGame.GameOverScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2dGame"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="GameOverScreen" Width="800" Height="601">
    <Page.Background>
        <ImageBrush ImageSource="Resource/PNG/Background/Button.png"/>
    </Page.Background>

    <Grid Width="Auto" Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        
        <Label Grid.Row="0" Content="{Binding Path=CoinString}" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Width="800" HorizontalContentAlignment="Center"/>

        <Button Grid.Column="2" Grid.Row="1" Width="400" Height="100" Content="Restart" FontSize="48" FontFamily="Segoe Print" Click="Button_Click" BorderBrush="{x:Null}" >
            <Button.Background>
                <ImageBrush ImageSource="Resource/PNG/Background/Button.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
